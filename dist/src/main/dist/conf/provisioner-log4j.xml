<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d{HH:mm:ss} %c{1}: %m%n"/>
        </layout>
    </appender>

    <appender name="file" class="org.apache.log4j.FileAppender">
        <param name="File" value="logs/provisioner.log"/>
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %d [%t] %c: %m%n"/>
        </layout>
    </appender>

    <!-- if there are ssh problems, put this on info or debug-->
    <logger name="net.schmizz">
        <level value="warn"/>
    </logger>

    <logger name="org.jclouds">
        <level value="warn"/>
    </logger>

    <logger name="org.jclouds">
        <level value="warn"/>
    </logger>

    <!-- enable this if you want to se what is being send over the wire -->
    <logger name="jclouds">
        <level value="warn"/>
    </logger>
    <logger name="org.jclouds">
        <level value="warn"/>
    </logger>

    <root>
        <priority value="debug"/>
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>

</log4j:configuration>